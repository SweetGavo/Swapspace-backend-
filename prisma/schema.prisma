generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum List_Types {
  USER
  AGENT
  ADMIN
}

model User {
  id             String      @id @unique @default(uuid())
  email          String      @unique
  password       String
  profile        Profile?
  otp            Otp?
  type           List_Types  @default(USER)
  createdAt      DateTime    @default(now())
  verifiedEmail  Boolean     @default(false)
}

model Profile {
  id            String    @id @unique @default(uuid())
  fullname      String
  number        String
  address       String
  image         String
  userId        String    @unique
  user          User      @relation(fields: [userId], references: [id])
  createdAt     DateTime  @default(now())

  @@index([userId])
}

model Otp {
  id         String    @id @unique @default(uuid())
  userId     String    @unique
  user       User      @relation(fields: [userId], references: [id])
  otp        String
  createdAt  DateTime  @default(now())

  @@index([userId])
}

